extends layout

block page_title
    title= 'As Minhas Equipas'


block additional_header

block content
    include navigation-bar.jade

    if errors != null
        br
        each val in errors
            .alert.alert-danger(role='alert')
                = val


    h2 Inscreva a sua equipa

    h4
        =competition.name

    form#login-form(action='/myteam/create/' + competition._id, method='post', role='form', style='display: block;')
        .form-group

            h3 Equipa
            .input-group.input-group-sm
                span#sizing-addon0.input-group-addon Nome da Equipa
                input.form-control(type='text', name='team_name', placeholder='Nome', aria-describedby='sizing-addon0')


            .row
                .col-sm-6.col-md-6
                    .caption
                        h3 Elementos Masculinos

                        .input-group.input-group-sm
                            span#sizing-addon1.input-group-addon Nome Membro 1
                            input.form-control(type='text', name='name', placeholder='Nome', aria-describedby='sizing-addon1')

                        .input-group.input-group-sm
                            span#sizing-addon2.input-group-addon Nome Membro 2
                            input.form-control(type='text', name='name', placeholder='Nome', aria-describedby='sizing-addon2')

                .col-sm-6.col-md-6
                    .caption

                        h3 Elementos Femininos

                        .input-group.input-group-sm
                            span#sizing-addon3.input-group-addon Nome Membro 3
                            input.form-control(type='text', name='name', placeholder='Nome', aria-describedby='sizing-addon1')

                        .input-group.input-group-sm
                            span#sizing-addon4.input-group-addon Nome Membro 4
                            input.form-control(type='text', name='name', placeholder='Nome', aria-describedby='sizing-addon2')


        .btn-group
            button.btn.btn-primary(type='submit') Registar
