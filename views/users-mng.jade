extends layout

block page_title
    title= 'Gest√£o de Utilizadores'


block additional_header
    script(src='javascripts/users-mng-ws.js')

block content
    include navigation-bar.jade

    .container
        h3 Utilizadores
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th ID
                        th Name
                        th Email
                        th Reset Password
                        th Coach
                        th Active

                tbody
                    if user_list != null
                        each u in user_list
                            tr
                                td
                                    = u._id
                                td
                                    = u.name
                                td
                                    = u.email
                                td
                                    button.btn.btn-danger.btn-xs Reset
                                td
                                    if u.coach
                                        input(type='checkbox', onclick='updateUserRole(\'' + u._id + '\', this)', checked)
                                    else
                                        input(type='checkbox', onclick='updateUserRole(\'' + u._id + '\', this)')
                                td
                                    if u.active
                                        input(type='checkbox', onclick='updateUserStatus(\'' + u._id + '\', this)', checked)
                                    else
                                        input(type='checkbox', onclick='updateUserStatus(\'' + u._id + '\', this)')