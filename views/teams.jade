extends layout

block page_title
    title= 'Equipas'


block additional_header

block content
    include navigation-bar.jade

    .container

        br
        if errors != null
            each val in errors
                .alert.alert-danger(role='alert')
                    = val

        h3 Equipas

        .table-responsive
            table.table
                thead
                    tr
                        th Nome
                        th Competição
                        th Elemento 1 (M)
                        th Elemento 2 (M)
                        th Elemento 3 (F)
                        th Elemento 4 (F)
                        th

                    if teams_list != null
                        - var i = 0;
                        each team in teams_list
                            tr
                                td
                                    = team.name
                                td
                                    = team.competition
                                td
                                    = team.members[i++]
                                td
                                    = team.members[i++]
                                td
                                    = team.members[i++]
                                td
                                    = team.members[i++]
                                td
                                    a.btn.btn-danger.btn-xs Delete